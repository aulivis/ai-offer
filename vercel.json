{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/pdf/generate/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/pdf/export/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/reconcile-quota?includeDevices=true",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/admin/pdf-jobs/process-retries",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/admin/pdf-jobs/reset-stuck?timeoutMinutes=10",
      "schedule": "*/10 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [],
  "redirects": []
}
